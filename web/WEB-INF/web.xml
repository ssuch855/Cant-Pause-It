<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <welcome-file-list>
        <welcome-file>welcome</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>viewReviewServlet</servlet-name>
        <servlet-class>ui.ViewReviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>viewReviewServlet</servlet-name>
        <url-pattern>/viewReviews</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>welcomeServlet</servlet-name>
        <servlet-class>ui.WelcomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>welcomeServlet</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NintendoSwitchServlet</servlet-name>
        <servlet-class>ui.NintendoSwitchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NintendoSwitchServlet</servlet-name>
        <url-pattern>/nintendoswitch</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PCServlet</servlet-name>
        <servlet-class>ui.PCServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PCServlet</servlet-name>
        <url-pattern>/pc</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>PS3Servlet</servlet-name>
    <servlet-class>ui.PS3Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PS3Servlet</servlet-name>
        <url-pattern>/ps3</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PS4Servlet</servlet-name>
        <servlet-class>ui.PS4Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PS4Servlet</servlet-name>
        <url-pattern>/ps4</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Xbox360Servlet</servlet-name>
        <servlet-class>ui.Xbox360Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Xbox360Servlet</servlet-name>
        <url-pattern>/xbox360</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>XboxOneServlet</servlet-name>
        <servlet-class>ui.XboxOneServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>XboxOneServlet</servlet-name>
        <url-pattern>/xboxone</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewOneReviewServlet</servlet-name>
        <servlet-class>ui.ViewOneReviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewOneReviewServlet</servlet-name>
        <url-pattern>/viewOneReview</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MiscellaneousServlet</servlet-name>
        <servlet-class>ui.MiscellaneousServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MiscellaneousServlet</servlet-name>
        <url-pattern>/miscellaneous</url-pattern>
    </servlet-mapping>
</web-app>